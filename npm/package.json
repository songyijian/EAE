{
  "name": "@caz-templates/npm1",
  "version": "0.1.0",
  "private": true,
  "description": "A template for creating npm1 apps.",
  "keywords": [
    "npm1",
    "caz-templates",
    "caz",
    "zce"
  ],
  "repository": "caz-templates/npm1",
  "license": "MIT",
  "author": "yijian.song <397032724@qq.com> (https://github.com/songyijian)",
  "main": "index.js",
  "scripts": {
    "test": "standard --fix && jest"
  },
  "jest": {
    "testTimeout": 20000,
    "modulePathIgnorePatterns": [
      "<rootDir>/template"
    ]
  },
  "renovate": {
    "extends": [
      "zce"
    ],
    "ignorePaths": [
      "template"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "template"
    ]
  },
  "devDependencies": {
    "caz": "0.8.0",
    "jest": "27.0.6",
    "standard": "16.0.3"
  }
}
